@model IEnumerable<FashionStore.Models.Products>

<div class="row row-cols-1 row-cols-md-3 g-4">
    @foreach (var p in Model)
    {
        <div class="col">
            <a href="@Url.Action("ProductDetail", "Home", new { id = p.Id })" class="text-decoration-none text-dark">
                <div class="card h-100 border-0 shadow-sm product-card">
                    <img src="@p.MainImage" alt="@p.Name"
                         class="card-img-top"
                         style="height: 260px; object-fit: cover;" />
                    <div class="card-body text-center">
                        <h6 class="fw-semibold text-truncate">@p.Name</h6>
                        <div class="text-muted small mb-1">Đã bán: @(p.SoldCount ?? 0)</div>
                        <p class="text-danger fw-bold mb-0">@String.Format("{0:N0} ₫", p.Price)</p>
                    </div>
                </div>
            </a>
        </div>
    }
</div>

