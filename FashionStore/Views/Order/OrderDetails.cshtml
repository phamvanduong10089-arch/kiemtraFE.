@model FashionStore.Models.OrderModel

@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice me-2"></i>Chi Tiết Đơn Hàng</h2>
        <a href="@Url.Action("MyOrder", "Order")" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại danh sách đơn hàng
        </a>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Thông tin đơn hàng -->
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Thông Tin Đơn Hàng #@Model.Id</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Mã đơn hàng:</strong></td>
                                    <td>#@Model.Id</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày đặt:</strong></td>
                                    <td>@Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                </tr>
                                <tr>
                                    <td><strong>Trạng thái:</strong></td>
                                    <td>
                                        <span class="badge
                                            @(Model.Status == "Completed" ? "bg-success" :
                                              Model.Status == "Cancelled" ? "bg-danger" :
                                              Model.Status == "Shipping" ? "bg-info" : "bg-warning")">
                                            @Model.Status
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <td><strong>Phương thức TT:</strong></td>
                                    <td>
                                        @if (Model.PaymentMethod == "COD")
                                        {
                                            <span class="badge bg-warning">Thanh toán khi nhận hàng</span>
                                        }
                                        else if (Model.PaymentMethod == "PayPal")
                                        {
                                            <span class="badge bg-primary">PayPal</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@Model.PaymentMethod</span>
                                        }
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-md-6">
                            <table class="table table-borderless">
                                <tr>
                                    <td><strong>Tổng tiền:</strong></td>
                                    <td class="fw-bold text-success fs-5">@Model.TotalAmount.ToString("N0") ₫</td>
                                </tr>
                                <tr>
                                    <td><strong>Khách hàng:</strong></td>
                                    <td>@Model.CustomerName</td>
                                </tr>
                                <tr>
                                    <td><strong>Điện thoại:</strong></td>
                                    <td>@Model.Phone</td>
                                </tr>
                                <tr>
                                    <td><strong>Email:</strong></td>
                                    <td>@(string.IsNullOrEmpty(Model.Email) ? "Chưa có" : Model.Email)</td>
                                </tr>
                            </table>
                        </div>
                    </div>

                    <div class="mt-3">
                        <strong>Địa chỉ giao hàng:</strong>
                        <p class="mb-0">@Model.Address</p>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Note))
                    {
                        <div class="mt-3">
                            <strong>Ghi chú:</strong>
                            <p class="mb-0 text-muted">@Model.Note</p>
                        </div>
                    }
                </div>
            </div>

            <!-- Chi tiết sản phẩm -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-shopping-bag me-2"></i>Chi Tiết Sản Phẩm</h5>
                </div>
                <div class="card-body">
                    @if (Model.OrderDetails != null && Model.OrderDetails.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Sản phẩm</th>
                                        <th class="text-center">Đơn giá</th>
                                        <th class="text-center">Số lượng</th>
                                        <th class="text-center">Thành tiền</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.OrderDetails)
                                    {
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-3">
                                                        <div style="width: 50px; height: 50px; background: #f8f9fa; display: flex; align-items: center; justify-content: center; border-radius: 4px;">
                                                            <i class="fas fa-tshirt text-muted"></i>
                                                        </div>
                                                    </div>
                                                    <div>
                                                        <div class="fw-bold">@item.ProductName</div>
                                                        <small class="text-muted">Mã SP: @item.ProductId</small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">@item.Price.ToString("N0") ₫</td>
                                            <td class="text-center">@item.Quantity</td>
                                            <td class="text-center fw-bold text-success">@item.Total.ToString("N0") ₫</td>
                                        </tr>
                                    }
                                </tbody>
                                <tfoot class="table-active">
                                    <tr>
                                        <td colspan="3" class="text-end fw-bold fs-5">Tổng cộng:</td>
                                        <td class="text-center fw-bold text-success fs-5">@Model.TotalAmount.ToString("N0") ₫</td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-shopping-bag fa-3x text-muted mb-3"></i>
                            <p class="text-muted">Không có sản phẩm trong đơn hàng</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Thao tác & Thông tin bổ sung -->
        <div class="col-md-4">
            <div class="card sticky-top" style="top: 20px;">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-cog me-2"></i>Thao Tác</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2 mb-3">
                        @if (Model.Status == "Pending")
                        {
                            <button class="btn btn-warning" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                <i class="fas fa-times me-2"></i>Hủy Đơn Hàng
                            </button>
                        }

                        <a href="@Url.Action("MyOrder", "Order")" class="btn btn-outline-secondary">
                            <i class="fas fa-list me-2"></i>Danh Sách Đơn Hàng
                        </a>

                        <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary">
                            <i class="fas fa-home me-2"></i>Tiếp Tục Mua Sắm
                        </a>
                    </div>

                    <!-- Thông tin hỗ trợ -->
                    <div class="border-top pt-3 mt-3">
                        <h6><i class="fas fa-headset me-2"></i>Hỗ Trợ Khách Hàng</h6>
                        <div class="small text-muted">
                            <p class="mb-1"><i class="fas fa-phone me-2"></i>Hotline: 1900 1234</p>
                            <p class="mb-1"><i class="fas fa-envelope me-2"></i>Email: support@fashionstore.com</p>
                            <p class="mb-0"><i class="fas fa-clock me-2"></i>Thời gian: 8:00 - 22:00</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal hủy đơn hàng -->
@if (Model.Status == "Pending")
{
    <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="cancelModalLabel">Xác Nhận Hủy Đơn Hàng</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc chắn muốn hủy đơn hàng #@Model.Id?</p>
                    <p class="text-danger"><small>Hành động này không thể hoàn tác.</small></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                    @using (Html.BeginForm("CancelOrder", "Order", new { id = Model.Id }, FormMethod.Post, new { @class = "d-inline" }))
                    {
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">Xác Nhận Hủy</button>
                    }
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        // Xử lý modal
        document.addEventListener('DOMContentLoaded', function () {
            var cancelModal = document.getElementById('cancelModal');
            if (cancelModal) {
                var modal = new bootstrap.Modal(cancelModal);
            }
        });
    </script>
}

<style>
    .sticky-top {
        position: -webkit-sticky;
        position: sticky;
        z-index: 1000;
    }

    .table-borderless td,
    .table-borderless th {
        border: none !important;
    }

    .badge {
        font-size: 0.8em;
        padding: 0.5em 0.75em;
    }
</style>