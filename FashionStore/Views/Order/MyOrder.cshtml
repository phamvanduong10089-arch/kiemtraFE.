@model IEnumerable<FashionStore.Models.Order>

@{
    ViewBag.Title = "Đơn Hàng Của Tôi";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4"><i class="fas fa-history me-2"></i>Đơn Hàng Của Tôi</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (Model.Any())
    {
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Mã đơn</th>
                                <th>Ngày đặt</th>
                                <th>Tổng tiền</th>
                                <th>Phương thức TT</th>
                                <th>Trạng thái</th>
                                <th class="text-center">Thao tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">#@item.Id</td>
                                    <td>@item.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                    <td class="fw-bold text-success">@item.TotalAmount.ToString("N0") ₫</td>
                                    <td>
                                        @if (item.PaymentMethod == "COD")
                                        {
                                            <span class="badge bg-warning">COD</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-info">@item.PaymentMethod</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge
                                            @(item.Status == "Completed" ? "bg-success" :
                                              item.Status == "Cancelled" ? "bg-danger" :
                                              item.Status == "Shipping" ? "bg-info" : "bg-warning")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("OrderDetail", new { id = item.Id })" class="btn btn-info btn-sm">
                                            <i class="fas fa-eye"></i> Chi tiết
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <i class="fas fa-shopping-bag fa-4x text-muted mb-4"></i>
            <h3 class="text-muted mb-3">Bạn chưa có đơn hàng nào</h3>
            <p class="text-muted mb-4">Hãy mua sắm và tạo đơn hàng đầu tiên của bạn</p>
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                <i class="fas fa-shopping-bag me-2"></i>Mua sắm ngay
            </a>
        </div>
    }
</div>