@model FashionStore.Models.Order

@{
    ViewBag.Title = "Đặt Hàng Thành Công";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}

<div class="container mt-4">
    <div class="text-center py-5">
        <div class="success-icon mb-4">
            <i class="fas fa-check-circle fa-5x text-success"></i>
        </div>

        <h1 class="text-success mb-3">ĐẶT HÀNG THÀNH CÔNG!</h1>
        <p class="lead mb-4">Cảm ơn bạn đã đặt hàng tại FashionStore</p>

        <div class="card border-success mb-4 mx-auto" style="max-width: 500px;">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-receipt me-2"></i>Thông Tin Đơn Hàng</h5>
            </div>
            <div class="card-body">
                <div class="text-start">
                    <p><strong>Mã đơn hàng:</strong> #@Model.Id</p>
                    <p><strong>Khách hàng:</strong> @Model.CustomerName</p>
                    <p><strong>Số điện thoại:</strong> @Model.Phone</p>
                    <p><strong>Địa chỉ:</strong> @Model.Address</p>
                    <p><strong>Tổng tiền:</strong> <span class="text-danger fw-bold">@Model.TotalAmount.ToString("N0") ₫</span></p>
                    <p>
                        <strong>Phương thức thanh toán:</strong>
                        @if (Model.PaymentMethod == "COD")
                        {
                            <span class="badge bg-warning">Thanh toán khi nhận hàng</span>
                        }
                        else if (Model.PaymentMethod == "PayPal")
                        {
                            <span class="badge bg-primary">PayPal</span>
                        }
                        else
                        {
                            <span class="badge bg-info">@Model.PaymentMethod</span>
                        }
                    </p>
                    <p><strong>Ngày đặt:</strong> @Model.OrderDate.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Trạng thái:</strong> <span class="badge bg-success">@Model.Status</span></p>
                </div>
            </div>
        </div>

        <div class="action-buttons">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg me-3">
                <i class="fas fa-home me-2"></i>Về trang chủ
            </a>
            <a href="@Url.Action("MyOrder", "Order")" class="btn btn-outline-success btn-lg">
                <i class="fas fa-history me-2"></i>Xem đơn hàng của tôi
            </a>
        </div>

        <div class="mt-4">
            <p class="text-muted">Chúng tôi sẽ liên hệ với bạn trong thời gian sớm nhất để xác nhận đơn hàng.</p>
        </div>
    </div>
</div>