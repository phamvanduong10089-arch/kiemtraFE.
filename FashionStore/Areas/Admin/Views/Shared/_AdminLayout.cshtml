@{
    Layout = null;
    var currentController = ViewContext.RouteData.Values["controller"].ToString();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - Admin</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    @RenderSection("Styles", required: false)
    <style>
        body {
            background: #eef5ff;
            font-family: 'Segoe UI', sans-serif;
        }

        .sidebar {
            width: 250px;
            background: #0072e6;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            color: white;
            padding-top: 20px;
            border-right: 3px solid #bde0ff;
        }

            .sidebar a {
                display: flex;
                align-items: center;
                gap: 10px;
                color: #ffffff;
                padding: 12px 20px;
                text-decoration: none;
                margin: 5px 12px;
                border-radius: 8px;
                transition: 0.25s;
            }

                .sidebar a:hover {
                    background: #ffffff;
                    color: #0072e6;
                    transform: translateX(4px);
                }

                .sidebar a.active {
                    background: #ffffff;
                    color: #0072e6;
                    font-weight: 600;
                }

        .content-wrapper {
            margin-left: 250px;
            padding: 25px;
        }

        .admin-header {
            background: white;
            padding: 16px;
            border-radius: 12px;
            border: 1px solid #d3e5ff;
            margin-bottom: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .breadcrumb-container {
            background: white;
            border: 1px solid #d3e5ff;
            padding: 10px 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .breadcrumb-item a {
            text-decoration: none;
        }
    </style>
</head>

<body>

    <!-- Sidebar -->
    <div class="sidebar">
        <h5 class="text-center fw-bold mb-3">
            <i class="fa-solid fa-gears me-2"></i>Quản trị
        </h5>

        <a class="@(currentController == "Dashboard" ? "active" : "")"
           href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
            <i class="fa-solid fa-chart-line"></i> Dashboard
        </a>

        <a class="@(currentController == "Categories" ? "active" : "")"
           href="@Url.Action("Index", "Categories", new { area = "Admin" })">
            <i class="fa-solid fa-folder-tree"></i> Categories
        </a>

        <a class="@(currentController == "Products" ? "active" : "")"
           href="@Url.Action("Index", "Products", new { area = "Admin" })">
            <i class="fa-solid fa-shirt"></i> Products
        </a>

        <a class="@(currentController == "Banners" ? "active" : "")"
           href="@Url.Action("Index", "Banners", new { area = "Admin" })">
            <i class="fa-solid fa-image"></i> Banners
        </a>

        <a class="@(currentController == "Users" ? "active" : "")"
           href="@Url.Action("Index", "Users", new { area = "Admin" })">
            <i class="fa-solid fa-users"></i> Users
        </a>


        <a class="mt-auto"
           href="@Url.Action("Logout", "Account", new { area = "" })">
            <i class="fa-solid fa-right-from-bracket"></i> Logout
        </a>
    </div>

    <!-- Content -->
    <div class="content-wrapper">

        <div class="admin-header">
            <h4 class="m-0">
                <i class="fa-solid fa-user-shield"></i> @ViewBag.PageTitle
            </h4>

            <a href="@Url.Action("Index", "Home", new { area = "" })"
               class="btn btn-outline-primary">
                <i class="fa-solid fa-arrow-left"></i> Quay lại cửa hàng
            </a>
        </div>


        <div class="breadcrumb-container">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item">
                        <a href="@Url.Action("Index", "Dashboard", new { area = "Admin" })">
                            <i class="fa-solid fa-house"></i> Home
                        </a>
                    </li>
                    @RenderSection("breadcrumb", required: false)
                </ol>
            </nav>
        </div>

        @RenderBody()
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
